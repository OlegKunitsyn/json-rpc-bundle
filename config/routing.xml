<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="json_rpc_bundle.endpoint" path="/" methods="POST">
        <default key="_controller">json_rpc_bundle.api.rpc</default>
    </route>

    <route id="json_rpc_bundle.doc" path="/doc" methods="GET">
        <default key="_controller">json_rpc_bundle.api.doc</default>
    </route>
</routes>
